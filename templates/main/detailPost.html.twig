{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
{{ dump(app) }}
<div class="container my-5">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-8">
                <div class="card-body">
                    <h1>{{ post.title }}</h1>
                    <p class="text-muted">By: {{ post.User.email }} on {{ post.creationDate|date('Y-m-d H:i') }}</p>
                    <p class="card-text">{{ post.content }}</p>
                </div>
            </div>
            {% if post.file %}
            <div class="col-md-4 d-flex align-items-center">
                <img src="{{ asset('upload/posts/' ~ post.file) }}" class="img-fluid rounded-end" alt="{{ post.title }}">
            </div>
            {% endif %}
        </div>
    </div>

    <hr>

    <h3>Comments</h3>
    {% if post.comments is not empty %}
        <ul class="list-group mb-4">
            {% for comment in post.comments %}
                <li class="list-group-item">
                    <strong>{{ comment.User.email }}</strong> on {{ comment.creationDate|date('Y-m-d H:i') }}
                    <p>{{ comment.text }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No comments yet. Be the first to comment!</p>
    {% endif %}

    {% if app.user %}
        {{ form_start(commentForm) }}
            {{ form_widget(commentForm) }}
            <button type="submit" class="btn btn-primary">Add Comment</button>
        {{ form_end(commentForm) }}
    {% else %}
        <p>You must be logged in to add a comment. <a href="{{ path('app_login') }}">Login</a> or <a href="{{ path('app_register') }}">Register</a>.</p>
    {% endif %}
</div>
{% endblock %}
