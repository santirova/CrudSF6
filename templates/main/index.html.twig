{% extends 'base.html.twig' %}

{% block title %}Posts List{% endblock %}

{% block body %}

    {{ form_start(filterForm) }}
    {{ form_row(filterForm.startDate) }}
    {{ form_row(filterForm.endDate) }}
    <div class="d-flex justify-content-between">
        <button class="btn btn-primary" type="submit">Apply Filters</button>
        {% if filtersApplied %}
        <a href="{{ path('app_main') }}" class="btn btn-secondary">Clear Filters</a>
        {% endif %}
    </div>
    {{ form_end(filterForm) }}

    {% if filtersApplied %}
        <div class="alert alert-info mt-4">
            Results for date range: 
            {% if startDate %}{{ startDate|date('Y-m-d') }}{% else %}{{ 'N/A' }}{% endif %} 
            to 
            {% if endDate %}{{ endDate|date('Y-m-d') }}{% else %}{{ 'N/A' }}{% endif %}
        </div>
    {% endif %}

    <div class="row row-cols-1 gy-4">
        {% if posts|length == 0 %}
            <p>No posts available.</p>
        {% else %}
            <h1>Posts</h1>
            {% for post in posts %}
                <div class="col mb-2">
                    <div class="card h-100 shadow-sm d-flex flex-column">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex">
                                <div class="flex-grow-1">
                                    <h5 class="card-title">{{ post.title }}</h5>
                                    <p class="card-text text-muted">{{ post.User.email }}</p>
                                </div>
                                {% if post.file %}
                                    <img src="{{ asset('upload/posts/' ~ post.File) }}" alt="{{ post.title }}" class="img-fluid rounded" style="max-width: 150px; max-height: 150px;">
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end">
                            <a href="{{path('detail_post', {'id': post.id})}}" class="btn btn-success btn-sm me-2"> 
                                Show more
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

    <div class="d-grid gap-2 mt-4">
        {% if app.user %}
            <a href="{{ path('create_post') }}" class="btn btn-primary">
                Add Post
            </a>
        {% else %}
            <button class="btn btn-primary" disabled>
                Login to add post
            </button>
        {% endif %}
    </div>
{% endblock %}
