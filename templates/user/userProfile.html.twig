{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="p-0 mt-2">
    <div class="d-flex justify-content-center my-3">
        <h1>Profile</h1>
    </div>
    <div class="card shadow-lg">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h2>{{ user.name }} {{ user.lastname }}</h2>
            <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                <i class="bi bi-pencil"></i> Edit Profile
            </button>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> {{ user.email }}</p>
            <p><strong>Phone:</strong> {{ user.phone }}</p>
            <p>
                <strong>Instagram:</strong>
                {% if user.instagram %}
                    <a href="{{ user.instagram }}" target="_blank" class="text-decoration-none">
                        <i class="bi bi-instagram"></i> Visit Instagram
                    </a>
                {% else %}
                    N/A
                {% endif %}
            </p>
        </div>
    </div>

    <!-- Modal for editing profile (to be implemented later) -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Future form for editing profile will go here -->
                    <p>Edit profile form coming soon!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
